<html>
<head>
  <title>Express Files</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet"/>
</head>
<body class="w-screen h-screen bg-zinc-900 text-white p-10 font-[Gilroy-Semibold]">
  <header class="text-5xl text-center">
    Express Files
  </header>
  <form action="/logout" method="post" class="flex justify-between items-center mt-5">
    <div class="text-3xl px-4 py-2 rounded-lg bg-cyan-600">Hello User</div>

    <button class="text-3xl bg-red-500 rounded-lg px-4 py-2">Log Out</button>
  </form>
  <main class="py-10">
    <form action="/addFile" method="post" enctype="multipart/form-data" class="w-full px-[400px] flex gap-10 items-center justify-center">
      <input type="file" name="file" class="w-[400px] px-4 py-2 rounded-md outline-none block bg-zinc-800 text-white">
      <button type="submit" class="bg-blue-500 text-white text-2xl rounded-md px-4 py-2">Add File</button>
    </form>
    <div class="files w-full px-20 flex flex-wrap gap-10 mt-20">
        <% files.forEach((file, id)=>{ %>
          <div class="file bg-slate-600 p-7 w-60 h-72 rounded-[40px] relative" key=<%id%>>
            <form action="/delete/<%=file._id%>" method="post" class="flex justify-between items-center">
              <i class="ri-file-text-line text-2xl"></i>
              <button type="submit"><i class="ri-close-circle-fill text-2xl text-red-500"></i></button>
            </form>
            <div class="font-semibold text-lg mt-5"><%=file.filename%></div>
            <div class="absolute bottom-0 right-0 flex items-center justify-between bg-emerald-500 w-full px-8 py-3 rounded-b-[40px]">
              <div class="text-lg">Size</div>
              <a href="/download/<%=file._id%>"><i class="ri-arrow-down-circle-fill text-blue-300 bg-slate-700 rounded-full text-3xl"></i></a>
            </div>
          </div>
       <%  }) %>
    </div>
  </main>
</body>
</html>